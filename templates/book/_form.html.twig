{{ form_start(bookForm) }}

<div class="row">
  <div class="col-4">
    <img src="{{ book.thumbnail }}" class="card-img-top hgt--img" alt="" />
  </div>
  <div class="col-8">
    <div class="row m--1">
      <div class="col-12">
        {{ form_label(bookForm.title) }}
        {{ form_widget(bookForm.title) }}
      </div>
    </div>
    <div class="row m--1">
      <div class="col-12">
        {{ form_label(bookForm.author) }}
        {{ form_widget(bookForm.author) }}
      </div>
    </div>
    <div class="row m--1">
      <div class="row">
        <div class="col-7">
          {{ form_label(bookForm.publisher) }}
          {{ form_widget(bookForm.publisher) }}
        </div>
        <div class="col-5">
          {{ form_label(bookForm.publication_date) }}
          {{ form_widget(bookForm.publication_date) }}
        </div>
      </div>
      <div class="row m--1">
        <div class="col-7 mb--2">
          {{ form_label(bookForm.language) }}
          {{ form_widget(bookForm.language) }}
        </div>
        <div class="col-5">
          {{ form_label(bookForm.genre) }}
          {{ form_widget(bookForm.genre) }}
         <small class="text-color-dark">Veuillez s√©lectionner le genre correspondant.</small>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row m--1">
    <div class="col-12">
      {{ form_label(bookForm.synopsis) }}
      {{ form_widget(bookForm.synopsis) }}
    </div>      
</div>
<div class="row m--1">
    <div class="col-4">
      <label for="book_isbn">ISBN</label>
     {{ form_widget(bookForm.isbn) }}
    </div>
    <div class="col-8"></div>
</div>
<div class="row m--1">
    <div class="col-4">
     <button type="submit" class="btn btn-primary w--100">Ajouter</button>
    </div>
    {{ form_end(bookForm) }}
</div>
 

  

