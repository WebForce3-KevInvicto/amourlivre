{% extends 'homebase.html.twig' %}

{% block title %}Amour Livre - Réinitialisation{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <h1>Réinitialisez votre mot de passe</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Entrez votre adresse email et nous vous enverrons un nouveau lien pour réinitialiser votre mot de passe.
            </small>
        </div>

        <button class="btn btn-primary w--mob-70 w--200 m--1 text-center">envoyer email</button>
    {{ form_end(requestForm) }}
{% endblock %}